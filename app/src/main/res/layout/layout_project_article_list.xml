<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/project_article_list_shape"
    android:layout_marginTop="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="作者"
        android:textSize="12sp"
        android:textColor="#111"
        android:id="@+id/author"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="200dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="时间"
        android:textSize="12sp"
        android:textColor="#555"
        android:id="@+id/time"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_below="@id/author"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/temp"
        android:scaleType="centerCrop"
        android:id="@+id/project_img"
        android:visibility="gone"/>
<!--    android:background="@drawable/project_article_list_img_shape"-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/author"
        android:layout_toRightOf="@id/project_img"
        tools:text="标题asdfasdfadfadsfadsfasdadsfasdfasdfadsfaffafaf"
        android:textSize="16sp"
        android:textColor="#000"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/title"
        android:layout_marginTop="6dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_toEndOf="@id/project_img"
        tools:text="标题asdfasdfadfad标题asdfasdfadfad标题asdfasdfadfadsfad标题asdfasdfadfadsfadsfasdadsfasdfasdfadsfaffafafsfasdadsfasdfasdfadsfaffafafsfadsfasdadsfasdfasdfadsfaffafafsfadsfasdadsfasdfasdfadsfaffafaf标题asdfasdfadfadsfadsfasdadsfasdfasdfadsfaffafaf"
        android:textSize="12sp"
        android:textColor="#555"
        android:maxLines="5"
        android:ellipsize="end"
        android:id="@+id/sub_title"
        android:layout_marginTop="6dp"/>
</RelativeLayout>