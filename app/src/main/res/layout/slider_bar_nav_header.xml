<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:id="@+id/slider_bar_layout">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:background="@drawable/ic_close"
        android:layout_margin="3dp"
        android:id="@+id/slider_bar_close" />

    <com.lyl.wanandroid.ui.view.CircleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:r="50dp"
        app:src="@drawable/temp"
        android:layout_gravity="center"
        android:id="@+id/slider_bar_avatar"
        android:layout_margin="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pls_login"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/slider_bar_nick_name" />
</LinearLayout>