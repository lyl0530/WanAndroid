<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBarH"
        android:background="@color/colorPrimary">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_title_back"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/titleLeftMargin"
            android:id="@+id/btn_back"
            android:onClick="onBack"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_text"
            android:textSize="@dimen/titleTextSize"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/titleLeftMargin"
            android:id="@+id/tv_search"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onSearch"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_search_edit_text_bg"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@id/btn_back"
            android:layout_toStartOf="@id/tv_search"
            android:hint="@string/search_hint"
            android:textColor="@color/white"
            android:textColorHint="@color/little_dark"
            android:paddingStart="20dp"
            android:lines="1"
            android:textSize="@dimen/normalTextSize"
            tools:ignore="RtlSymmetry"
            android:id="@+id/et_search"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fl"/>

</LinearLayout>